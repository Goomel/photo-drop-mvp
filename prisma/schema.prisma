generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Album {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String?
  eventDate   DateTime?
  uploadUntil DateTime?
  viewUntil   DateTime?
  createdAt   DateTime  @default(now())
  photos      Photo[]
}

model Photo {
  id        String   @id @default(cuid())
  albumId   String
  s3Key     String
  createdAt DateTime @default(now())
  album     Album    @relation(fields: [albumId], references: [id], onDelete: Cascade)
}
